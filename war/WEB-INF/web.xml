<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

	<listener>
		<listener-class>com.dngconsulting.demo.server.context.InitProductsListener</listener-class>
	</listener>

  <!-- Servlets -->
  
  <servlet>
  	<servlet-name>product</servlet-name>
  	<servlet-class>com.dngconsulting.demo.server.ProductServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>product</servlet-name>
  	<url-pattern>/ecom/productservice</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Ecom.html</welcome-file>
  </welcome-file-list>

</web-app>
